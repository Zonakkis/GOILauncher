<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GOI地图管理器.App"
             xmlns:local="using:GOI地图管理器"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://GOI地图管理器/Icons.axaml" />
		<Style Selector="ToggleButton PathIcon.save-on">
			<Setter Property="IsVisible" Value="False"/>
		</Style>
		<Style Selector="ToggleButton:checked PathIcon.save-on">
			<Setter Property="IsVisible" Value="True"/>
		</Style>
		<Style Selector="ToggleButton PathIcon.save-off">
			<Setter Property="IsVisible" Value="True"/>
		</Style>
		<Style Selector="ToggleButton:checked PathIcon.save-off">
			<Setter Property="IsVisible" Value="False"/>
		</Style>
	</Application.Styles>
</Application>